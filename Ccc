#include "Menu.hpp"

Menu::Menu(float width, float height)
{
    if (!font.loadFromFile("arial.ttf"))
    {
        // brak czcionki
    }

    selectedItemIndex = 0;

    // --- Opcja 0: Start ---
    menu[0].setFont(font);
    menu[0].setFillColor(sf::Color::Red);
    menu[0].setString("Start");
    menu[0].setPosition(sf::Vector2f(width / 3, height / (MAX_MENU_ITEMS + 1) * 1));

    // --- Opcja 1: Wyniki ---
    menu[1].setFont(font);
    menu[1].setFillColor(sf::Color::White);
    menu[1].setString("Wyniki");
    menu[1].setPosition(sf::Vector2f(width / 3, height / (MAX_MENU_ITEMS + 1) * 2));

    // --- Opcja 2: Wyjscie ---
    menu[2].setFont(font);
    menu[2].setFillColor(sf::Color::White);
    menu[2].setString("Wyjscie");
    menu[2].setPosition(sf::Vector2f(width / 3, height / (MAX_MENU_ITEMS + 1) * 3));
}

void Menu::draw(sf::RenderWindow& window)
{
    for (int i = 0; i < MAX_MENU_ITEMS; i++)
        window.draw(menu[i]);
}

void Menu::moveUp()
{
    if (selectedItemIndex - 1 >= 0)
    {
        menu[selectedItemIndex].setFillColor(sf::Color::White);
        selectedItemIndex--;
        menu[selectedItemIndex].setFillColor(sf::Color::Red);
    }
}

void Menu::moveDown()
{
    if (selectedItemIndex + 1 < MAX_MENU_ITEMS)
    {
        menu[selectedItemIndex].setFillColor(sf::Color::White);
        selectedItemIndex++;
        menu[selectedItemIndex].setFillColor(sf::Color::Red);
    }
}
